<table class="table table-hover table-inverse">

  <% if @range == "User" %>
    <h2>User search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>    </th>
      <th>user image</th>
      <th>name</th>
      <th>introduction</th>
    </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>    </td>
          <td><%= image_tag user.get_profile_image,size:'50x50' %></td>
          <td>
            <%= link_to user_path(user.id) do %>
            <%= user.name %>
            <% end %>
          </td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "Book" %>
    <h2>Book title search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>    </th>
        <th>title</th>
        <th>opinion</th>
        <th>favorites</th>
        <th>tags</th>
        <th>user</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>    </td>
          <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
          <td>â™¥<%= book.favorites.count %></td>

          <td>
            <% book.tags.each do |tag| %>
              <%= link_to tag_books_path(tag_id: tag.id) do %>
                <%= tag.name %>:<%= tag.books.count %>
              <% end %>
            <% end %>
          </td>

          <td>
            <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image,size:'50x50' %><br>
            <%= book.user.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "Tag" %>
    <h2>Tag search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <td>    </td>
        <td>name</td>
        <td>count</td>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td>    </td>
          <td>
            <%= link_to tag_books_path(tag_id: tag.id) do %>
            <%= tag.name %>
            <% end %>
          </td>
          <td><%= tag.books.count %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>